{{!< page}}
{{#contentFor "form-area"}}
<form class="contact-form" action="https://formspree.io/YOUR@EMAIL.HERE" method="post">
  <input type="text" name="name" id="full-name" placeholder="first and last" required>
  <input type="email" name="_replyto" id="email-address" placeholder="name@mail.com" required>
  <textarea rows="5" name="message" id="message" placeholder="message" required></textarea>
  <input class="button" type="submit" value="Submit">
  <input type="hidden" name="_subject" id="email-subject" value="Contact Form Submission">
</form>
{{/contentFor}}