{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<main id="site-main" class="site-main">
  <div class="site-wrapper">
    <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
      <header class="post-full-header">
        <div class="post-full-header-inner">
          {{#if tags}}
          <ul class="post-full-tags-list">
            {{#foreach tags}}
            <li class="post-full-tag-item">
              <a href="{{url}}" title="{{name}}" class="post-full-tag tag-{{comment_id}} {{slug}}">{{name}}</a>
            </li>
            {{/foreach}}
          </ul>
          {{/if}}

          <h1 class="post-full-title">{{title}}</h1>

          <footer class="post-full-meta">
            <ul class="author-list">
              {{#foreach authors}}
              <li class="author-list-item">
                <div class="author-name-tooltip">
                  {{name}}
                </div>
          
                {{#if profile_image}}
                <a href="{{url}}" class="static-avatar">
                  <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                </a>
                {{else}}
                <a href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</a>
                {{/if}}
              </li>
              {{/foreach}}
            </ul>
            <div class="post-full-byline">
              <span>{{#has author="count:>2"}}Multiple authors{{else}}{{authors}}{{/has}}</span>
              <span class="post-full-byline-date">Posted on <time
                  datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD"}}</time>
              </span>
            </div>
          </footer>
        </div>
      </header>

      {{#if feature_image}}
      <img srcset="{{img_url feature_image size="s"}} 300w,
        {{img_url feature_image size="m"}} 600w,
        {{img_url feature_image size="l"}} 1000w,
        {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px" loading="lazy"
        src="{{img_url feature_image size="m"}}" alt="{{title}}" class="post-featured-image" />
      {{/if}}

      <section class="post-full-content">
        <div class="post-content">
          {{content}}
          {{{block "form-area"}}}
        </div>
      </section>
    </article>
  </div>
</main>
{{/post}}
